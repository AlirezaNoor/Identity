@model identity.Models.ViewModels.ManageUser.AddUserToRoleViewModel
@{
    ViewData["Title"] = "DeleteUserToRole";
}

<h1>DeleteUserToRole</h1>

<form asp-controller="ManageUser" asp-action="RemoveUserFromRole" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    @if (!Model.addrole.Any())
    {
        <h1>هیچ مقامی یافت نشد</h1>
    }
    else
    {
        for (int i = 0; i < Model.addrole.Count; i++)
        {
            <div class="form-group">
                <input asp-for="@Model.addrole[i].Isselected" />
                <label>@Model.addrole[i].Rolename</label>

                <input type="hidden" asp-for="@Model.addrole[i].Rolename" />
            </div>
        }
    }

    <input type="hidden" asp-for="@Model.id" />
    <button class="btn btn-primary" type="submit">Submit</button>
</form>