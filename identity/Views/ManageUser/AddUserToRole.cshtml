@model identity.Models.ViewModels.ManageUser.AddUserToRoleViewModel
@{
    ViewData["Title"] = "AddUserToRole";
}

<h1>AddUserToRole</h1>


@if (!Model.addrole.Any())
{
    <h1>هیچ مقامی یافت نشد</h1>
}
else
{
    <form asp-controller="ManageUser" asp-action="AddUserToRole" method="post">
        <div asp-validation-summary="ModelOnly"></div>

        @for (int i = 0; i < Model.addrole.Count; i++)
        {
            <div class="form-group">
                <input asp-for="@Model.addrole[i].Isselected" />
                <label>@Model.addrole[i].Rolename</label>

                <input type="hidden" asp-for="@Model.addrole[i].Rolename" />
            </div>
        }
        <input type="hidden" asp-for="@Model.id" />
        <button class="btn btn-primary" type="submit">Submit</button>
    </form>
}